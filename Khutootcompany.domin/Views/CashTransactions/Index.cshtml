
@model IEnumerable<Khutootcompany.Application.DTOs.CashTransactionDto>

@{
    ViewData["Title"] = "حركات الصندوق";
    var balance = ViewBag.CurrentBalance ?? 0m;
}

<div class="container-fluid">
    <h1>
        <i class="fas fa-money-bill-wave"></i> حركات الصندوق
        <span class="badge @(balance >= 0 ? "bg-success" : "bg-danger")">
            الرصيد: @balance.ToString("N3") د.ك
        </span>
    </h1>

    <div class="card shadow mt-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">جميع الحركات المالية</h5>
        </div>
        <div class="card-body">
            <table id="cashTable" class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>التاريخ</th>
                        <th>النوع</th>
                        <th>المبلغ (د.ك)</th>
                        <th>الموظف</th>
                        <th>الشاحنة</th>
                        <th>الوصف</th>
                        <th>السند</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trans in Model)
                    {
                        <tr>
                            <td>@trans.TransactionDate.ToString("dd/MM/yyyy")</td>
                            <td><span class="badge bg-secondary">@trans.TypeDisplay</span></td>
                            <td>
                                <span class="@(trans.IsIncome ? "text-success" : "text-danger") fw-bold">
                                    @(trans.IsIncome ? "+" : "")@trans.Amount.ToString("N3")
                                </span>
                            </td>
                            <td>@trans.EmployeeName</td>
                            <td>@trans.TruckPlate</td>
                            <td>@trans.Description</td>
                            <td>@trans.SondNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#cashTable').DataTable({
                "language": {"url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"},
                "order": [[0, "desc"]],
                "pageLength": 50
            });
        });
    </script>
}
